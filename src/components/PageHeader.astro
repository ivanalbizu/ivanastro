---
export interface Props {
  title: string;
}

const hasSlot = Astro.slots.has('default');

const { title } = Astro.props;
---

<header class="header">
  <h1 class="header__title">{title}</h1>
  {hasSlot && <p class="header__txt"><slot /></p>}
  <hr class="hr" />
</header>

<style lang="scss">
  .header {
    text-align: center;
    margin-block-end: var(--space-xxl);

    &__title {
      font-family: var(--typography-font-family-primary);
      font-size: var(--typography-font-size-heading-1);
      font-weight: var(--typography-font-weight-bold);
      color: var(--color-brand-primary);
      text-transform: uppercase;
      letter-spacing: var(--typography-letter-spacing-md);
      line-height: var(--typography-line-height-sm);
      margin-block-end: var(--space-md);
    }

    &__txt {
      font-size: var(--typography-font-size-heading-5);
      line-height: var(--typography-line-height-md);
      color: var(--color-text-secondary);
      margin-inline: auto;
      margin-block-end: var(--space-lg);
      max-width: var(--max-width-thin);
    }
  }

  .hr {
    height: var(--border-width-lg);
    background-color: var(--color-brand-primary);
    border: none;
    width: 120px;
    margin: 0 auto;
  }
</style>
