---
export interface Props {
  title: string;
}

const hasSlot = Astro.slots.has('default');

const { title } = Astro.props;
---

<header class="header">
  <h1 class="header__title">{title}</h1>
  {hasSlot && <p class="header__txt"><slot /></p>}
  <hr class="hr" />
</header>

<style lang="scss">
  .header {
    text-align: center;
    margin-block-end: calc(var(--grid-unit) * 8);

    &__title {
      font-family: var(--font-family-primary);
      font-size: var(--fs-heading-1);
      font-weight: 700;
      color: var(--color-accent);
      text-transform: uppercase;
      letter-spacing: 0.03em;
      line-height: 1.1;
      margin-block-end: calc(var(--grid-unit) * 3);
    }

    &__txt {
      font-size: var(--fs-heading-5);
      line-height: 1.6;
      color: var(--color-text-secondary);
      margin-inline: auto;
      margin-block-end: calc(var(--grid-unit) * 4);
      max-width: var(--max-width-thin);
    }
  }

  .hr {
    height: var(--border-width-lg);
    background-color: var(--color-accent);
    border: none;
    width: 120px;
    margin: 0 auto;
  }
</style>
