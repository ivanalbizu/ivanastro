---
import Button from "@components/Button.astro";
import { config } from "../config";

const { base = "" } = Astro.site
  ? { base: import.meta.env.BASE_URL }
  : { base: "" };

const { pathname } = Astro.url;
const pathSegment = pathname.slice(1).replace(/\/$/, "");
---

<header class="site-header">
  <div class="skip-to-content">
    <a href="#main-content">Saltar al contenido principal</a>
    <a href="#footer">Saltar a enlaces en pié de página</a>
  </div>
  <div class="header-content">
    <Button
      tag="button"
      variant="link"
      size="sm"
      class="mobile-only"
      id="hamburger-toggle"
      aria-label="Abrir menú de navegación"
      aria-expanded="false"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 48 48"
        aria-hidden="true"
      >
        <path
          fill="none"
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="4"
          d="M7.95 11.95h32m-32 12h32m-32 12h32"></path>
      </svg>
      <span class="visually-hidden">Abrir menú de navegación</span>
    </Button>

    <div class="site-title">
      <a href={base}>
        {config.title}
      </a>
    </div>

    <div class="header-controls">
      <nav
        class="main-navigation"
        id="main-navigation"
        role="navigation"
        aria-label="Principal"
      >
        <ul class="nav-list">
          <li>
            <Button
              tag="button"
              variant="link"
              size="sm"
              class="close-menu"
              id="close-menu"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 48 48"
                aria-hidden="true"
              >
                <path
                  fill="currentColor"
                  stroke="currentColor"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="4"
                  d="m8 8l32 32M8 40L40 8"></path>
              </svg>
              <span class="visually-hidden">Cerrar menú de navegación</span>
            </Button>
          </li>
          <li>
            <a
              href={base + "blog"}
              class:list={["nav-link", pathSegment == "blog" ? "active" : ""]}
              aria-current={pathSegment == "blog" ? "page" : null}>Blog</a
            >
          </li>
          <li>
            <a
              href={base + "categorias"}
              class:list={[
                "nav-link",
                pathSegment == "categorias" ? "active" : "",
              ]}
              aria-current={pathSegment == "categorias" ? "page" : null}
              >Categorías</a
            >
          </li>
          <li>
            <a
              href={base + "sobre-mi"}
              class:list={[
                "nav-link",
                pathSegment == "sobre-mi" ? "active" : "",
              ]}
              aria-current={pathSegment == "sobre-mi" ? "page" : null}
              >Sobre mí</a
            >
          </li>
          <li>
            <a
              href={base + "curriculum"}
              class:list={[
                "nav-link",
                pathSegment == "curriculum" ? "active" : "",
              ]}
              aria-current={pathSegment == "curriculum" ? "page" : null}>CV</a
            >
          </li>
        </ul>
      </nav>

      <div class="mobile-controls">
        <Button tag="button" variant="link" size="sm" id="theme-toggle">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              fill="currentColor"
              d="M7.5 2c-1.79 1.15-3 3.18-3 5.5s1.21 4.35 3.03 5.5C4.46 13 2 10.54 2 7.5A5.5 5.5 0 0 1 7.5 2m11.57 1.5l1.43 1.43L4.93 20.5L3.5 19.07zm-6.18 2.43L11.41 5L9.97 6l.42-1.7L9 3.24l1.75-.12l.58-1.65L12 3.1l1.73.03l-1.35 1.13zm-3.3 3.61l-1.16-.73l-1.12.78l.34-1.32l-1.09-.83l1.36-.09l.45-1.29l.51 1.27l1.36.03l-1.05.87zM19 13.5a5.5 5.5 0 0 1-5.5 5.5c-1.22 0-2.35-.4-3.26-1.07l7.69-7.69c.67.91 1.07 2.04 1.07 3.26m-4.4 6.58l2.77-1.15l-.24 3.35zm4.33-2.7l1.15-2.77l2.2 2.54zm1.15-4.96l-1.14-2.78l3.34.24zM9.63 18.93l2.77 1.15l-2.53 2.19z"
            ></path>
          </svg>
          <span class="visually-hidden"
            >Activar / Desactivar el modo oscuro</span
          >
        </Button>
        <Button tag="button" variant="link" size="sm" id="font-size">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 56 56"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
            aria-hidden="true"
          >
            <path
              fill="currentColor"
              d="M27.578 45.297c1.172 0 1.781-.469 2.227-1.758l3.023-8.297h13.828l3 8.297c.469 1.29 1.055 1.758 2.227 1.758c1.265 0 2.11-.75 2.11-1.922c0-.398-.094-.75-.259-1.266L42.72 12.86c-.54-1.453-1.5-2.156-2.977-2.156s-2.437.703-2.953 2.133L25.773 42.133c-.187.515-.234.867-.234 1.265c0 1.172.773 1.899 2.04 1.899m6.399-13.64l5.671-15.774h.141l5.695 15.773ZM4.023 45.296c.938 0 1.594-.469 2.016-1.688l1.875-5.414h8.578l1.875 5.414c.422 1.243 1.078 1.688 2.04 1.688c1.171 0 1.991-.75 1.991-1.852c0-.398-.07-.82-.304-1.406l-6.985-18.562c-.492-1.36-1.453-2.227-2.93-2.227c-1.453 0-2.39.867-2.882 2.227L2.289 42.039c-.21.586-.281 1.008-.281 1.406c0 1.102.797 1.852 2.015 1.852m4.946-10.29l3.07-9.14h.305l3.094 9.14Z"
            ></path>
          </svg>
          <span class="visually-hidden">Cambiar tamaño de letra</span>
        </Button>
        <Button tag="button" variant="link" size="sm" id="search-toggle">
          <svg
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
            aria-hidden="true"
          >
            <circle
              cx="11"
              cy="11"
              r="8"
              stroke="currentColor"
              stroke-width="2"
              fill="none"></circle>
            <path
              d="M21 21l-4.35-4.35"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"></path>
          </svg>
          <span class="visually-hidden">Abrir buscador de entradas</span>
        </Button>
      </div>
    </div>
  </div>
</header>

<search class="search-overlay" id="search-overlay">
  <div class="search-container">
    <div class="search-header">
      <input
        type="text"
        class="search-input"
        id="search-input"
        placeholder="Buscar artículos..."
        autocomplete="off"
      />
      <Button tag="button" variant="link" size="sm" id="search-close">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 48 48"
          aria-hidden="true"
        >
          <path
            fill="currentColor"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="4"
            d="m8 8l32 32M8 40L40 8"></path>
        </svg>
        <span class="visually-hidden">Cerrar búsqueda</span>
      </Button>
    </div>
  </div>
  <div
    class="search-results"
    id="search-results"
    role="region"
    aria-live="polite"
  >
  </div>
</search>

<script src="../assets/js/script.ts"></script>

<style lang="scss">
  .site-header {
    border-bottom: var(--border-width-md) solid var(--color-theme-border-default);
    background-color: var(--color-theme-background-surface);
    padding-block: var(--space-xxs);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .header-content {
    max-width: var(--max-width-default);
    margin-inline: auto;
    display: grid;
    grid-template-columns: auto auto 1fr;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-sm);
    padding: 0 var(--space-semantic-padding);
  }

  .site-title a {
    display: flex;
    align-items: center;
    min-height: var(--target-size);
    font-family: var(--typography-font-family-primary);
    font-weight: var(--typography-font-weight-bold);
    text-transform: uppercase;
    letter-spacing: var(--typography-letter-spacing-md);
    color: var(--color-theme-text-primary);
    padding-block: var(--space-xxxs);
    transition:
      color var(--transition-duration-normal) ease,
      text-decoration var(--transition-duration-normal) ease;
    text-decoration-color: transparent;
    text-underline-offset: 6px;
    text-decoration-thickness: 2px;

    &.active,
    &:hover,
    &:focus {
      color: var(--color-brand-interactive);
      text-decoration-color: revert;
    }
  }

  .header-controls {
    display: flex;
    align-items: center;
    gap: var(--space-xxs);
    justify-self: end;
  }

  .search-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    padding-inline: var(--space-sm);
    background: rgba(0, 0, 0, 0.8);
    z-index: 1000;
    opacity: 0;
    visibility: hidden;
    transition:
      opacity var(--transition-duration-slow) ease,
      visibility var(--transition-duration-slow) ease;
  }

  .search-overlay.active {
    opacity: 1;
    visibility: visible;
  }

  .search-container {
    max-width: var(--max-width-medium);
    margin: var(--space-lg) auto var(--space-md);
  }

  .search-header {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    background: var(--color-theme-background-default);
    border: var(--border-width-md) solid var(--color-theme-border-default);
    border-radius: var(--border-radius-lg);
    padding: var(--space-md);
  }

  .search-input {
    flex: 1;
    font-family: var(--typography-font-family-body);
    font-size: var(--typography-font-size-heading-6);
    color: var(--color-theme-text-primary);
    background: var(--color-theme-background-default);
    border-radius: var(--border-radius-md);
    border: var(--border-width-md) solid var(--color-theme-border-default);
    padding: var(--space-sm);
    max-width: calc(100% - var(--target-size) - var(--space-sm));
  }

  .search-input::placeholder {
    color: var(--color-theme-text-muted);
  }

  .search-results {
    max-width: var(--max-width-medium);
    margin-inline: auto;
    max-height: 70vh;
    min-height: 40vh;
    overflow-y: auto;
    background: var(--color-theme-background-default);
    border-radius: var(--border-radius-lg);
    border: var(--border-width-sm) solid var(--color-theme-border-default);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    padding: var(--space-md);
    &:empty {
      display: none;
    }
  }

  :global(.search-result + .search-result) {
    margin-block-start: var(--space-md);
  }

  :global([data-theme="dark"]) .search-input {
    //color: var(--color-black);
  }

  .search-no-results {
    padding: var(--space-xxxl) var(--space-xl);
    text-align: center;
  }

  .search-no-results p {
    color: var(--color-theme-text-muted);
    font-style: italic;
    margin: 0;
    font-size: var(--typography-font-size-paragraph-1);
  }

  .nav-list {
    display: block;
    list-style-type: "";
    margin: 0;
    padding: 0;
    gap: var(--space-xxs);
    li {
      margin-block-end: 0;
    }
  }

  .close-menu {
    margin: var(--space-sm);
  }
  @media (min-width: 768px) {
    .nav-list {
      display: flex;
    }
    .close-menu {
      display: none !important;
    }
  }

  .mobile-controls {
    display: flex;
    align-items: center;
    gap: var(--space-xxs);
    .btn {
      min-height: var(--target-size);
    }
  }

  @media (max-width: 767.98px) {
    .main-navigation {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      padding: var(--space-xxs);
      background-color: var(--color-theme-background-default);
      z-index: 99;
      transform: translateX(-100%);
      transition:
        transform var(--transition-duration-slow) ease,
        visibility 0s var(--transition-duration-slow) ease;
      overflow-y: auto;
      visibility: hidden;
    }
  }
  .main-navigation.active {
    transform: translateX(0);
    visibility: visible;
    transition: transform var(--transition-duration-slow) ease;
  }
  :global(.is-resizing) {
    .main-navigation {
      transition: none;
    }
  }

  .nav-link {
    display: flex;
    align-items: center;
    padding: var(--space-md) var(--space-lg);
    font-family: var(--typography-font-family-primary);
    font-weight: var(--typography-font-weight-bold);
    font-size: var(--typography-font-size-heading-4);
    text-transform: uppercase;
    letter-spacing: var(--typography-letter-spacing-xxl);
    color: var(--color-theme-text-primary);
    text-decoration-color: transparent;
    text-underline-offset: 6px;
    text-decoration-thickness: 2px;
    border-bottom: var(--border-width-sm) solid var(--color-theme-border-default);
    min-height: var(--target-size);
    transition:
      color var(--transition-duration-normal) ease,
      text-decoration var(--transition-duration-normal) ease;
    &.active,
    &:hover,
    &:focus {
      color: var(--color-brand-interactive);
      background-color: var(--color-theme-background-surface);
    }
    &.active {
      pointer-events: none;
    }
  }

  @media (min-width: 768px) {
    .nav-link {
      font-size: var(--typography-font-size-paragraph-2);
      letter-spacing: var(--typography-letter-spacing-md);
      padding: var(--space-xxxs) var(--space-xxs);
      border-bottom: 0;
      &.active,
      &:hover,
      &:focus {
        color: var(--color-brand-interactive);
        text-decoration-color: revert;
        background-color: transparent;
      }
    }
    .header-content {
      display: flex;
      flex-wrap: wrap;
      gap: var(--space-sm);
      padding: 0 var(--space-semantic-padding);
    }
    .mobile-only {
      display: none !important;
    }
    .search-results {
      padding: var(--space-md) var(--space-lg) var(--space-lg) var(--space-lg);
      &-header {
        padding: var(--space-md) var(--space-lg);
        margin: calc(var(--space-md) * -1) calc(var(--space-lg) * -1)
          var(--space-md) calc(var(--space-lg) * -1);
      }
    }
  }
</style>
