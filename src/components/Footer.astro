---
import { config } from '../config';
import SocialLinks from '@components/SocialLinks.astro';

const currentYear = new Date().getFullYear();
---
<footer class="footer" id="footer">
  <div class="footer-content">
    <div class="footer-info">
      <p class="copyright">
        {currentYear} {config.author.name}.
      </p>
      <p class="theme-credit">
        Powered by <a href="https://astro.build" target="_blank" rel="noopener noreferrer">Astro <span class="visually-hidden"> en nueva ventana</span></a>
      </p>
    </div>
    <SocialLinks />
  </div>
</footer>

<style lang="scss">
  .footer {
    background-color: var(--color-surface-elevated);
    border-top: var(--border-width-md) solid var(--color-border-default);
    margin-block-start: auto;
    padding-block: var(--space-lg);
  }

  .footer-content {
    max-width: var(--max-width-default);
    margin-inline: auto;
    padding-inline: var(--space-semantic-padding);
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: var(--space-sm);
  }

  .footer-info {
    display: flex;
    flex-direction: column;
    gap: var(--space-xxxs);
  }

  .copyright,
  .theme-credit {
    margin: 0;
    font-size: var(--typography-font-size-paragraph-4);
    color: var(--color-text-muted);
  }

  .theme-credit a {
    color: var(--color-interactive-default);
    &:hover,
    &:focus {
      color: var(--color-text-default);
    }
  }
</style>
