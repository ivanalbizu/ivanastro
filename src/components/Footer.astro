---
import { config } from '../config';
import SocialLinks from '@components/SocialLinks.astro';

const currentYear = new Date().getFullYear();
---
<footer class="site-footer">
  <div class="footer-content">
    <div class="footer-info">
      <p class="copyright">
        {currentYear} {config.author.name}.
      </p>
      <p class="theme-credit">
        Powered by <a href="https://astro.build" target="_blank" rel="noopener">Astro</a>
      </p>
    </div>
    
    <SocialLinks />
  </div>
</footer>

<style lang="scss">
  .site-footer {
    background-color: var(--color-surface);
    border-top: var(--border-width-md) solid var(--color-border);
    margin-top: auto;
    padding: calc(var(--grid-unit) * 4) 0;
  }

  .footer-content {
    max-width: var(--max-width);
    margin-inline: auto;
    padding: 0 var(--content-padding);
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: calc(var(--grid-unit) * 2);
  }

  .footer-info {
    display: flex;
    flex-direction: column;
    gap: calc(var(--grid-unit) / 2);
  }

  .copyright,
  .theme-credit {
    margin: 0;
    font-size: var(--fs-paragraph-4);
    color: var(--color-text-muted);
  }

  .theme-credit a {
    color: var(--color-interaction-default);
    &:hover,
    &:focus {
      color: var(--color-text-primary);
    }
  }
</style>
