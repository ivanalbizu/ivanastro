---
import Button from "@components/Button.astro";

import { config } from '../config';
---
<section class="hero">
  <div class="hero-content">
    <h1 class="hero-title">{config.title}</h1>
    <h2 class="hero-subtitle">Maquetador web</h2>
    <p class="hero-description">
      Html, css, sass, javascript, astro, accesibilidad web.
    </p>
    <hr class="hr" />
    <div class="hero-actions">
      <div>
        <Button tag="a" variant="secondary" href="#latest-entries">Últimas entradas</Button>
      </div>
      <div>
        <Button tag="a" variant="secondary" href="#main-categories"
          >Principales categorías</Button
        >
      </div>
      <div>
        <Button tag="a" variant="secondary" href="#technology-stack"
          ><span lang="en">Stack</span>&nbsp;tecnológico</Button
        >
      </div>
    </div>
  </div>
</section>

<style lang="scss">
  .hero {
    text-align: center;
    padding: calc(var(--grid-unit) * 12) 0 calc(var(--grid-unit) * 8);
    background: linear-gradient(
      135deg,
      var(--color-surface) 0%,
      var(--color-background) 100%
    );
  }

  .hero-content {
    max-width: var(--max-width-medium);
    margin-inline: auto;
    padding: 0 var(--content-padding);
  }

  .hero-title {
    font-family: var(--font-family-primary);
    font-size: var(--fs-heading-2);
    font-weight: 700;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    line-height: 0.9;
    margin-block-end: calc(var(--grid-unit) * 2);
  }

  .hero-subtitle {
    font-family: var(--font-family-primary);
    font-size: var(--fs-heading-5);
    font-weight: 700;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin-block-end: calc(var(--grid-unit) * 3);
  }

  .hero-description {
    font-size: var(--fs-paragraph-1);
    line-height: 1.6;
    color: var(--color-text-primary);
    margin-block-end: calc(var(--grid-unit) * 4);
    max-width: var(--max-width-thin);
    margin-inline: auto;
  }

  .hr {
    height: var(--border-width-lg);
    background-color: var(--color-accent);
    border: none;
    width: 150px;
    margin: 0 auto calc(var(--grid-unit) * 4);
  }

  .hero-actions {
    display: flex;
    gap: calc(var(--grid-unit) * 2);
    justify-content: center;
    flex-wrap: wrap;
  }
</style>
