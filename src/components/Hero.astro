---
import Button from "@components/Button.astro";

import { config } from '../config';
---
<section class="hero-wrap">
  <div class="hero">
    <h1 class="hero__title">{config.title}</h1>
    <h2 class="hero__subtitle">Maquetador web</h2>
    <p class="hero__description">
      Html, css, sass, javascript, astro, accesibilidad web.
    </p>
    <hr class="hr" />
    <div class="hero__actions">
      <div>
        <Button tag="a" variant="secondary" href="#latest-entries">Últimas entradas</Button>
      </div>
      <div>
        <Button tag="a" variant="secondary" href="#main-categories"
          >Principales categorías</Button
        >
      </div>
      <div>
        <Button tag="a" variant="secondary" href="#technology-stack"
          ><span><span lang="en">Stack</span> tecnológico</span></Button
        >
      </div>
    </div>
  </div>
</section>

<style lang="scss">
  .hero-wrap {
    text-align: center;
    padding: var(--space-xxxl) var(--space-sm);
    background: linear-gradient(
      135deg,
      var(--color-theme-background-surface) 0%,
      var(--color-theme-background-default) 100%
    );
  }

  .hero {
    max-width: var(--max-width-medium);
    margin-inline: auto;
    padding: 0 var(--space-semantic-padding);

    &__title {
      font-family: var(--typography-font-family-primary);
      font-size: var(--typography-font-size-heading-2);
      font-weight: var(--typography-font-weight-bold);
      color: var(--color-brand-primary);
      text-transform: uppercase;
      letter-spacing: var(--typography-letter-spacing-xxl);
      line-height: var(--typography-line-height-xs);
      margin-block-end: var(--space-sm);
    }

    &__subtitle {
      font-family: var(--typography-font-family-primary);
      font-size: var(--typography-font-size-heading-5);
      font-weight: var(--typography-font-weight-bold);
      color: var(--color-theme-text-muted);
      text-transform: uppercase;
      letter-spacing: var(--typography-letter-spacing-xxl);
      margin-block-end: var(--space-md);
    }

    &__description {
      font-size: var(--typography-font-size-heading-5);
      line-height: var(--typography-line-height-md);
      color: var(--color-theme-text-secondary);
      margin-inline: auto;
      margin-block-end: var(--space-lg);
      max-width: var(--max-width-thin);
    }

    &__actions {
      display: flex;
      gap: var(--space-sm);
      justify-content: center;
      flex-wrap: wrap;
    }
  }

  .hr {
    height: var(--border-width-lg);
    background-color: var(--color-brand-primary);
    border: none;
    width: 150px;
    margin: 0 auto var(--space-lg);
  }
</style>
